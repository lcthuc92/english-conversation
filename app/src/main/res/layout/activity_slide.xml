<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlideActivity">

    <GridLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_spinner_folder_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.2"
        android:columnCount="3">

        <Spinner
            android:id="@+id/spinner_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Spinner
            android:id="@+id/spinner_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:layout_column="1"
            android:layout_row="0" />

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_column="2"
            android:layout_row="0" />
    </GridLayout>

    <TextView
        android:layout_columnWeight="0.4"
        android:id="@+id/txtConversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24pt"
        android:textColor="@color/blue"
        android:layout_below="@+id/layout_spinner_folder_topic" />

    <TextView
        android:layout_columnWeight="0.4"
        android:id="@+id/txtMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textColor="@color/mean"
        android:textStyle="italic"
        android:layout_below="@+id/txtConversation" />
</RelativeLayout>